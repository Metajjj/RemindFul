<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/Background"
    android:id="@+id/BGM_bg">

    <TextView
        android:id="@+id/BGM_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center" android:textAlignment="center"
        android:text="Background Music"
        android:textColor="?attr/Title"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <ScrollView
        android:id="@+id/BGM_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:background="?attr/Interactable"
            android:id="@+id/BGM_Table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1">

            <TableRow
                android:background="?attr/DelHighlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/BGM_URI"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Click for full name"
                    android:textColor="?attr/Text"
                    android:padding="8dp"

                    android:textSize="25dp"

                    />

                <TextView
                    android:id="@+id/BGM_Play"
                    android:layout_weight="0.5"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Play"
                    android:textColor="?attr/Text"
                    android:padding="8dp"

                    android:textSize="20dp"
                    />
            </TableRow>
        </TableLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>